<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="21dp"
            >
            <ImageButton
                android:id="@+id/backButton_quiz"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/keyboard_backspace"
                android:background="#00ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Quiz"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="24.75dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:id="@+id/lyrics_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우리"
                android:textSize="50dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/romaza_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oori"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/quiz_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We"
                android:textColor="#00000000"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9D9"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                <LinearLayout
                  android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginTop="30dp"
                   android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                   android:padding="10dp"
                    >
                     <Button
                      android:id="@+id/quizSelect_1"
                      android:layout_width="135dp"
                      android:layout_height="135dp"
                      android:textAllCaps="false"
                      android:text="Me"
                      android:textSize="30dp"
                      android:background="@drawable/round_button2"
                      android:layout_marginRight="32dp"
                      />

                     <Button
                        android:id="@+id/quizSelect_2"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:textAllCaps="false"
                        android:text="We"
                        android:textSize="30dp"
                        android:layout_gravity="end"
                        android:background="@drawable/round_button2"

                        />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"

            android:layout_gravity="center"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/quizSelect_3"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:textAllCaps="false"
                android:text="You"
                android:textSize="30dp"
                android:background="@drawable/round_button2"
                android:layout_marginRight="32dp"
                />

            <Button
                android:id="@+id/quizSelect_4"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:textAllCaps="false"
                android:text="He"
                android:textSize="30dp"
                android:background="@drawable/round_button2"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/quiz_submit"
                android:layout_width="296dp"
                android:layout_height="58dp"
                android:background="@drawable/round_button3"
                android:text="Submit"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#6E6D73"
                />

        </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>