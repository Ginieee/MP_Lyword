<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/studying_item_album_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/studying_item_album_iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/default_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/studying_item_loader_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/loader_100"
                app:layout_constraintStart_toStartOf="@+id/studying_item_album_iv"
                app:layout_constraintTop_toTopOf="@+id/studying_item_album_iv"
                app:layout_constraintBottom_toBottomOf="@+id/studying_item_album_iv"
                app:layout_constraintEnd_toEndOf="@+id/studying_item_album_iv"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/studying_item_song_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/studying_item_album_cv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/studying_item_singer_iv"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/studying_item_singer_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@id/studying_item_album_cv"
        app:layout_constraintTop_toBottomOf="@id/studying_item_song_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>