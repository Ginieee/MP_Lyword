<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="221dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/roundView"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:scaleType="fitXY"
                android:src="@drawable/rectangle_2793"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="18dp"

                >
                <TextView
                    android:layout_width="205dp"
                    android:layout_height="33dp"
                    android:text="30 days in a row!"
                    android:textColor="#EF6D85"
                    android:textStyle="bold"
                    android:textSize="26dp"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/ellipse_127"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="87.62dp"

                android:src="@drawable/ellipse_127"

                />

            <ImageView
                android:id="@+id/group2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/group2"
                android:layout_marginLeft="277dp"
                android:layout_marginTop="17dp"
                />

            <ImageView
                android:id="@+id/ellipse_125"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ellipse_125"
                android:layout_marginLeft="315dp"
                android:layout_marginTop="29dp"
                />

            <Button
                android:id="@+id/startToLearn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="145dp"
                android:paddingStart="40dp"
                android:paddingEnd="43dp"
                android:layout_marginTop="119dp"
                android:background="@drawable/round_button"
                android:drawableRight="@drawable/button_design"
                android:text="Start to learn"
                android:textAllCaps="false"
                android:textColor="#EF6D85"
                android:textSize="16dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/today_word"
                    android:layout_width="137dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="#00ffffff"
                    android:textAllCaps="false"
                    android:textColor="#EF6D85"
                    android:drawableRight="@drawable/vector_35"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Today's Word    "
                    />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_width="178dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="23dp"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:background="@drawable/round_button2"
                        android:textStyle="bold"
                        android:text="Flower\n꽃 [발음]"
                        />

                    <Button
                        android:layout_width="178dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="23dp"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:background="@drawable/round_button2"
                        android:textStyle="bold"
                        android:text="Flower\n꽃 [발음]"
                        />

                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="291dp"
                android:layout_height="271dp"
                android:layout_marginTop="22dp"
                android:layout_gravity="center"
                android:background="@drawable/layout_border"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/rectangle_4"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/songName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flower"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginTop="42dp"
                            android:layout_marginLeft="17dp"
                            android:textColor="#000000"
                            />

                        <TextView
                            android:id="@+id/singerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JISOO"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="5.92dp"
                            android:layout_marginLeft="17dp"
                            android:textColor="#000000"
                            />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/lyrics_English"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_gravity="center"
                    android:text="I left only the scent of flowers"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/lyrics_Korean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.93dp"
                    android:layout_gravity="center"
                    android:text="꽃향기만 남기고 갔단다"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/lyrics_Pronunciation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:text="[발음]"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />

                <Button
                    android:id="@+id/startToLearn2"
                    android:layout_width="162.46dp"
                    android:layout_height="25dp"
                    android:background="#00ffffff"
                    android:text="Start to learn"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="#EF6D85"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"

                    />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>